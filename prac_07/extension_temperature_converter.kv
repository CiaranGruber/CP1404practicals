BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: 'Celsius'
            size_hint_x: 0.2
        TextInput:
            id: celsius_input
            text: ''
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            Button:
                text: 'Up'
                on_press: app.change_celsius(1)
            Button:
                text: 'Down'
                on_press: app.change_celsius(-1)
        Button:
            id: convert_celsius
            size_hint_x: 0.5
            text: 'Convert to Fahrenheit'
            on_press: app.convert_to_fahrenheit()
    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: 'Fahrenheit'
            size_hint_x: 0.2
        TextInput:
            id: fahrenheit_input
            text: ''
        BoxLayout:
            size_hint_x: 0.3
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.change_fahrenheit(1)
            Button:
                text: 'Down'
                on_press: app.change_fahrenheit(-1)
        Button:
            id: convert_fahrenheit
            size_hint_x: 0.5
            text: 'Convert to Celsius'
            on_press: app.convert_to_celsius()
    Button:
        text: 'Clear'
        on_press: app.clear_all()
