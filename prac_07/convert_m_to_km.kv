BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: text_input
            text: ''
            multiline: False
            on_text: app.convert_distance()
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.2, 1
            Button:
                id: up_button
                text: 'Up'
                on_press: app.handle_increment(1)
                on_press: app.convert_distance()
            Button:
                id: down_button
                text: 'Down'
                on_press: app.handle_increment(-1)
                on_press: app.convert_distance()
#    Button:
#        id: conversion_button
#        text: 'Convert m to km'
#        on_press: app.convert_distance()
    Label:
        id: output_label
        text: ''
        color: (1, 1, 0, 1)